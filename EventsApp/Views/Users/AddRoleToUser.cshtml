@model EventsApp.Models.RoleUserModel

@{
    ViewData["Title"] = "AddRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddRoleToUser</h1>

<h4>RoleUserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoleToUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" value="@ViewBag.username" readonly class="form-control" />
           
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <select asp-for="RoleName" class="form-control" asp-items="new SelectList(ViewBag.RoleList)">Please Select Role</select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexRoles" asp-route-username="@ViewBag.username">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

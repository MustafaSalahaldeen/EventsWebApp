@model IEnumerable<EventsApp.Models.RoleUserModel>

@{
    ViewData["Title"] = "IndexUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>IndexUsers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                    <a asp-action="IndexRoles" asp-route-username="@item.UserName">View User Roles</a> |
           
            </td>
        </tr>
}
    </tbody>
</table>
